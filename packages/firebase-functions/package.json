{
  "name": "trpc-firebase-functions",
  "version": "0.2.0",
  "description": "End-to-end type safety for your Firebase functions with tRPC.",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "pnpm build --watch",
    "lint": "eslint --ext .js,.ts src",
    "check-types": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "author": "Edmund Rosewright",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:EdRW/trpc-adapters.git"
  },
  "bugs": {
    "url": "https://github.com/EdRW/trpc-adapters/issues"
  },
  "homepage": "https://github.com/EdRW/trpc-adapters/tree/main/packages/firebase-functions",
  "keywords": [
    "trpc",
    "adapter",
    "firebase",
    "functions"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "peerDependencies": {
    "@trpc/server": "^10.27.0",
    "firebase-functions": "^4.0.0 || ^5.0.0"
  },
  "devDependencies": {
    "@trpc-adapters/eslint-config": "workspace:*",
    "@trpc-adapters/jest-config": "workspace:*",
    "@trpc-adapters/typescript-config": "workspace:*",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.5",
    "@types/supertest": "^6.0.2",
    "express": "^4.19.2",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.5",
    "tsup": "^8.1.0",
    "typescript": "^5.4.5"
  }
}
