{
  "name": "trpc-firebase-functions",
  "version": "1.0.0-next.2",
  "description": "End-to-end type safety for your Firebase functions with tRPC.",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "pnpm build --watch",
    "lint": "eslint --ext .js,.ts src",
    "check-types": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "author": "Edmund Rosewright",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:EdRW/trpc-adapters.git"
  },
  "bugs": {
    "url": "https://github.com/EdRW/trpc-adapters/issues"
  },
  "homepage": "https://github.com/EdRW/trpc-adapters/tree/main/packages/firebase-functions",
  "keywords": [
    "trpc",
    "adapter",
    "firebase",
    "functions"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "package.json",
    "!**/*.test.*"
  ],
  "peerDependencies": {
    "@trpc/server": "^11.0.0",
    "firebase-functions": "^6.0.0"
  },
  "devDependencies": {
    "@trpc-adapters/eslint-config": "workspace:*",
    "@trpc-adapters/jest-config": "workspace:*",
    "@trpc-adapters/typescript-config": "workspace:*",
    "@trpc/server": "^11.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "express": "^4.21.2",
    "firebase-functions": "^6.0.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3"
  }
}
